<div class="sessionspages">
<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path, :html => { :honeypot => true })  do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign in" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p></br>
<p> <%= link_to "Forgot Password?", password_recovery_path %></p>
</div>