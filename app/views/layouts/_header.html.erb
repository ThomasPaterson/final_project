<header>
    <div class="logo">
      <%= link_to logo, root_path %>
    </div>
   

    <nav class="menu">
      <ul>
        <% if signed_in? %>
          <li><%= avatar_for current_user, 30 %></li>
          <li><span><%= link_to "#{current_user.name}", user_profile_path %></span></li>
          <% if admin? %>
            <li><%= link_to "Members", users_path %></li>
          <% end %>
          <li><%= link_to "Settings", edit_user_path(current_user) %></li>
          <li><%= link_to "Log out", signout_path %></li>
        <% else %>
          <li><%= link_to "Sign in", signin_path %></li>
          <li><%= link_to "Sign up", signup_path %></li>
        <% end %>
      </ul>
    </nav>
</header>